{
  "name": "lit-confetti",
  "description": "Confetti animation as a web component",
  "author": "Maurice Prosper",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "main": "dist/npm/index.js",
  "sideEffects": false,
  "type": "module",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/mothepro/lit-confetti",
  "scripts": {
    "test": "echo 'no tests'",
    "copydemo": "copyfiles demo/* dist/",
    "html:importmap": "replace 'import-map.dev.json' 'import-map.prod.json' dist/demo/index.html",
    "html:js": "replace '../dist/demo/index.js' 'index.js' dist/demo/index.html",
    "predeploy": "npm run build:esm && npm run build:demo",
    "deploy": "gh-pages -d dist/demo",
    "prerelease": "npm run build:npm && npm run deploy",
    "release": "np",
    "map:dev": "importly --host node_modules < package.json > demo/import-map.dev.json",
    "win:map:dev": "type package.json | importly --host node_modules > demo/import-map.dev.json",
    "map:prod": "importly --host unpkg < package.json > demo/import-map.prod.json",
    "win:map:prod": "type package.json | importly --host unpkg > demo/import-map.prod.json",
    "postbuild:demo": "npm run copydemo && npm run html:importmap && npm run html:js",
    "build:demo": "tsc -p tsconfig.demo.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:npm": "tsc",
    "build": "npm run build:npm && npm run build:esm && npm run build:demo",
    "start": "npm run build:demo && npm run build:esm -- -w"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/should-sinon": "^0.0.5",
    "copyfiles": "^2.1.1",
    "gh-pages": "^2.1.1",
    "importly": "^0.1.0-dev.0",
    "mocha": "^6.2.2",
    "np": "^5.2.1",
    "replace": "^1.1.1",
    "should": "^13.2.3",
    "should-sinon": "^0.0.6",
    "sinon": "^7.5.0",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "lit-element": "^2.2.1"
  }
}
