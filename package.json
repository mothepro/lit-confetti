{
  "name": "lit-confetti",
  "description": "Confetti animation as a web component",
  "author": "Maurice Prosper",
  "version": "0.0.2",
  "license": "Apache-2.0",
  "main": "dist/npm/index.js",
  "sideEffects": false,
  "type": "module",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/mothepro/lit-confetti",
  "scripts": {
    "test": "echo 'no tests'",
    "predeploy": "npm run build:esm:prod",
    "deploy": "gh-pages -d dist/demo",
    "prerelease": "npm run build:npm && npm run deploy",
    "release": "np",
    "map:dev": "importly --host node_modules < package.json > dist/demo/import-map.json",
    "win:map:dev": "type package.json | importly --host node_modules > dist/demo/import-map.json",
    "map:prod": "importly --host unpkg < package.json > dist/demo/import-map.json",
    "win:map:prod": "type package.json | importly --host unpkg > dist/demo/import-map.json",
    "build:esm:dev": "npm run map:dev && npm run build:esm",
    "win:build:esm:dev": "npm run win:map:dev && npm run build:esm",
    "build:esm:prod": "npm run map:prod && npm run build:esm",
    "win:build:esm:prod": "npm run win:map:prod && npm run build:esm",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:npm": "tsc",
    "build": "npm run build:npm && npm run build:esm"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/should-sinon": "^0.0.5",
    "gh-pages": "^2.1.1",
    "importly": "^0.1.0-dev.0",
    "mocha": "^6.2.2",
    "np": "^5.2.1",
    "should": "^13.2.3",
    "should-sinon": "^0.0.6",
    "sinon": "^7.5.0",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "lit-element": "^2.2.1"
  }
}
